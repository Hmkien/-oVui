@model DoVuiHaiNao.Models.Quizz

@{
    ViewData["Title"] = "Chỉnh sửa bài Quizz";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">✏️ Chỉnh sửa bài Quizz</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-decoration-none" asp-area="Admin" asp-controller="Home"
                        asp-action="Index">Admin</a></li>
                <li class="breadcrumb-item"><a class="text-decoration-none" asp-area="Admin" asp-controller="DanhMucs"
                        asp-action="Index">Bài Quizz</a></li>
                <li class="breadcrumb-item active fw-bold" aria-current="page">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                            <input asp-for="Title" class="form-control " placeholder="Nhập tiêu đề" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control " placeholder="Nhập mô tả"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DanhMucId" class="form-label fw-bold">Danh mục</label>
                            <select asp-for="DanhMucId" class="form-select " asp-items="ViewBag.DanhMucId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="DanhMucId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DurationInMinutes" class="form-label fw-bold">Thời gian làm bài
                                (giây)</label>
                            <input asp-for="DurationInMinutes" type="number" class="form-control " min="1"
                                placeholder="Nhập thời gian làm bài" />
                            <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label fw-bold">Hình ảnh</label>
                            <input asp-for="File" class="form-control " />
                            <span asp-validation-for="ImageQuizz" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MucDoId" class="form-label fw-bold">Mức độ</label>
                            <select asp-for="MucDoId" class="form-select " asp-items="ViewBag.MucDo">
                                <option value="">-- Chọn mức độ --</option>
                            </select>
                            <span asp-validation-for="MucDoId" class="text-danger"></span>
                        </div>

                        <div class="text-end mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Quay lại</a>
                            <button type="submit" class="btn btn-primary px-4">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
