@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container d-flex flex-column align-items-center justify-content-center ">
    <div class="card shadow-sm border-danger text-center p-4" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
            </h1>
            <p class="text-muted">Bạn không có quyền truy cập vào tài nguyên này.</p>
            <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-primary">
                <i class="bi bi-house-door"></i> Quay về trang chủ
            </a>
        </div>
    </div>
</div>
